<Application x:Class="WhisperKey.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WhisperKey"
             xmlns:system="clr-namespace:System;assembly=mscorlib">
    <Application.Resources>
        <!-- DPI-aware sizing converter -->
        <local:DpiScaleConverter x:Key="DpiScaleConverter"/>
        <local:FontSizeConverter x:Key="FontSizeConverter"/>
        
        <!-- Boolean to Visibility converter (commonly used) -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Responsive sizing resources based on DPI scaling -->
        <!-- These values auto-scale based on current screen DPI -->
        <system:Double x:Key="BaseFontSize">12</system:Double>
        <system:Double x:Key="SmallFontSize">10</system:Double>
        <system:Double x:Key="MediumFontSize">14</system:Double>
        <system:Double x:Key="LargeFontSize">16</system:Double>
        <system:Double x:Key="TitleFontSize">20</system:Double>
        
        <!-- Base spacing values (in DIPs - Device Independent Pixels) -->
        <system:Double x:Key="SmallPadding">4</system:Double>
        <system:Double x:Key="MediumPadding">8</system:Double>
        <system:Double x:Key="LargePadding">12</system:Double>
        <system:Double x:Key="ExtraLargePadding">16</system:Double>
        <system:Double x:Key="XXLPadding">20</system:Double>
        
        <!-- Color resources for consistent theming -->
        <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#FFF8F9FA"/>
        <SolidColorBrush x:Key="DarkBackgroundBrush" Color="#FF2D2D30"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#FF28A745"/>
        <SolidColorBrush x:Key="InfoBrush" Color="#FF007ACC"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#FFFFC107"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#FFDC3545"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FF2D2D30"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#FF6C757D"/>
        <SolidColorBrush x:Key="TextMutedBrush" Color="#FFADB5BD"/>
        <SolidColorBrush x:Key="WhiteBrush" Color="White"/>
        
        <!-- Common border styles -->
        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="BorderBrush" Value="#FFE1E4E8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="{StaticResource LargePadding}"/>
        </Style>
        
        <!-- Common button styles -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>
        
        <!-- Status bar style -->
        <Style x:Key="StatusBarStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource DarkBackgroundBrush}"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
        
        <!-- GroupBox style for settings -->
        <Style x:Key="SettingsGroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Padding" Value="{StaticResource LargePadding}"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
    </Application.Resources>
</Application>
