{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "SmokeTest": {
    "DefaultTestTimeoutSeconds": 30,
    "HealthCheckTimeoutSeconds": 10,
    "WorkflowTestTimeoutSeconds": 60,
    "MaxRetryAttempts": 2,
    "RetryDelayMs": 1000,
    "EnableParallelExecution": true,
    "MaxParallelism": 4,
    "EnabledCategories": "Critical,HealthCheck,Workflow,Performance,Security,ExternalService,Deployment",
    "OutputDirectory": "./smoke-test-results",
    "PerformanceThresholds": {
      "MaxAudioProcessingMs": 2000,
      "MaxTextInjectionMs": 500,
      "MaxSettingsLoadMs": 1000,
      "MaxAuthenticationMs": 1500,
      "MaxMemoryUsageMb": 512,
      "MaxCpuUsagePercent": 80.0
    },
    "SecuritySettings": {
      "RequireSOC2Compliance": true,
      "RequireAuditLogging": true,
      "RequireSecureCredentialStorage": true,
      "RequirePermissionSystem": true,
      "RequireApiKeyRotation": true,
      "RequireSecurityAlerts": true
    },
    "ServiceEndpoints": {
      "whisper_api": "https://api.openai.com/v1/engines",
      "authentication": "https://auth.example.com/health",
      "database": "https://db.example.com/health"
    },
    "Environments": {
      "production": {
        "StrictMode": true,
        "PerformanceThresholdMultiplier": 1.0,
        "RequireAllTests": true,
        "SkipPerformanceTests": false,
        "SkipSecurityTests": false
      },
      "staging": {
        "StrictMode": false,
        "PerformanceThresholdMultiplier": 1.5,
        "RequireAllTests": false,
        "SkipPerformanceTests": false,
        "SkipSecurityTests": false
      },
      "development": {
        "StrictMode": false,
        "PerformanceThresholdMultiplier": 2.0,
        "RequireAllTests": false,
        "SkipPerformanceTests": true,
        "SkipSecurityTests": false
      }
    }
  }
}