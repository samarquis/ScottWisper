<Window x:Class="ScottWisper.MainWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:local="clr-namespace:ScottWisper"
         mc:Ignorable="d"
         Title="ScottWisper Settings" 
         Height="350" 
         Width="400"
         WindowStyle="None"
         ShowInTaskbar="False"
         WindowState="Minimized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="0" Height="30" Background="#FF2D2D30" Foreground="White">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Status: " FontWeight="Bold"/>
                    <TextBlock x:Name="StatusText" Text="Idle"/>
                </StackPanel>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <Ellipse x:Name="StatusIndicator" Width="12" Height="12" 
                             Fill="Gray" Margin="0,0,5,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="StatusTime" Text=""/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
        
        <!-- Main Content -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="ScottWisper Voice Dictation" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Settings and configuration will appear here" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="Press Ctrl+Win+Shift+V to activate voice dictation" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
        </StackPanel>
        
        <!-- Footer Status -->
        <Border Grid.Row="2" Background="#FFF0F0F0" Padding="10" BorderBrush="#FFCCCCCC" BorderThickness="0,1,0,0">
            <StackPanel>
                <TextBlock x:Name="FooterStatus" Text="Ready" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                <TextBlock x:Name="FooterMessage" Text="System initialized" HorizontalAlignment="Center" FontSize="11" Foreground="Gray"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>