<Window x:Class="WhisperKey.MainWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:local="clr-namespace:WhisperKey"
         mc:Ignorable="d"
         Title="WhisperKey Settings" 
         Height="500" 
         Width="500"
         WindowStyle="None"
         ShowInTaskbar="False"
         WindowState="Minimized"
         Background="#FFF8F9FA">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
         <!-- Enhanced Status Bar -->
        <Border Grid.Row="0" Background="#FF2D2D30" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status Text and Indicator -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Visual status indicator with shape alternative for better accessibility -->
                    <Border x:Name="StatusIndicator" Width="14" Height="14" 
                            Background="Transparent" BorderBrush="Gray" BorderThickness="2" CornerRadius="7"
                            VerticalAlignment="Center" Margin="0,0,8,0"
                            AutomationProperties.Name="Status Indicator"
                            AutomationProperties.HelpText="Current system state indicator color">
                        <Ellipse Width="10" Height="10" Fill="Gray" VerticalAlignment="Center"/>
                    </Border>
                    
                    <!-- Accessible status text with multiple indicators -->
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="0,0,8,0">
                        <TextBlock Text="â—" FontSize="12" Foreground="Gray" VerticalAlignment="Center"/>
                        <TextBlock x:Name="StatusText" Text="Idle" FontWeight="Bold" Foreground="White" 
                                   Margin="8,0,0,0" VerticalAlignment="Center"
                                   AutomationProperties.Name="Status Text"
                                   AutomationProperties.HelpText="Current application status. â— indicates idle, â—â— indicates active, â—â— indicates error"/>
                        <TextBlock x:Name="StatusDescription" Text="Application is idle" FontSize="10" Foreground="Gray" 
                                   Margin="0,4,0,0" VerticalAlignment="Center"
                                   AutomationProperties.Name="Status Description"
                                   AutomationProperties.HelpText="Detailed status description for screen readers"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Current Time -->
                <TextBlock Grid.Column="1" x:Name="StatusTime" Text="" 
                          Foreground="White" VerticalAlignment="Center" Margin="0,0,15,0"/>
                
                <!-- Quick Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="SettingsButton" Content="âš™ï¸" Background="Transparent" Foreground="White"
                            BorderThickness="0" FontSize="14" Width="25" Height="25" Margin="0,0,5,0"
                            ToolTip="Application Settings" Click="SettingsButton_Click"
                            AutomationProperties.Name="Settings"
                            AutomationProperties.HelpText="Open settings to configure audio, hotkeys, and transcription options"/>
                    <Button x:Name="HelpButton" Content="â“" Background="Transparent" Foreground="White"
                            BorderThickness="0" FontSize="14" Width="25" Height="25"
                            ToolTip="Help and Documentation" Click="HelpButton_Click"
                            AutomationProperties.Name="Help"
                            AutomationProperties.HelpText="Open user guide and documentation"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Progress Indicator Section -->
        <Border Grid.Row="1" x:Name="ProgressSection" Background="#FFE8F4FD" 
                Padding="15,10" BorderBrush="#FFB6D7A8" BorderThickness="0,0,0,1" Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="ProgressOperation" Text="Processing..." FontWeight="SemiBold" FontSize="12"/>
                    <TextBlock x:Name="ProgressDetails" Text="" FontSize="10" Foreground="Gray" Margin="0,2,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <ProgressBar x:Name="ProgressBar" Width="150" Height="6" Margin="0,0,10,0" 
                                   Minimum="0" Maximum="100" Value="0"/>
                    <TextBlock x:Name="ProgressPercentage" Text="0%" FontSize="10" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Application Title and Status -->
            <Border Grid.Row="0" Background="White" Padding="20,15" Margin="10,10,10,5"
                       CornerRadius="5" BorderBrush="#FFE1E4E8" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Title and Main Status -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Border Width="40" Height="40" Margin="0,0,12,0" VerticalAlignment="Center"
                                Background="{StaticResource SuccessBrush}" CornerRadius="8">
                            <TextBlock Text="ðŸŽ¤" FontSize="22" HorizontalAlignment="Center" 
                                       VerticalAlignment="Center" Foreground="White"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="WhisperKey" HorizontalAlignment="Center" 
                                       FontSize="24" FontWeight="Bold" Foreground="#FF2D2D30"/>
                            <TextBlock Text="Voice Dictation" HorizontalAlignment="Center" 
                                       FontSize="14" Foreground="#FF6C757D" Margin="0,2,0,0"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Main Status Message -->
                    <TextBlock x:Name="MainStatusMessage" Grid.Row="1" Text="Ready for dictation" 
                               HorizontalAlignment="Center" FontSize="12" Foreground="#FF6C757D" 
                               Margin="0,8,0,0"
                               AutomationProperties.Name="Main Status Message"
                               AutomationProperties.HelpText="Overall status of the voice dictation system"
                               AutomationProperties.LiveSetting="Polite"/>
                    
                    <!-- Injection Test Results Panel -->
                    <Border x:Name="InjectionTestPanel" Grid.Row="1" Background="#FFF8F9FA" Padding="10" 
                             BorderBrush="#FFE1E4E8" BorderThickness="1" CornerRadius="3" Margin="0,10,0,0"
                             Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="Injection Test Results" FontWeight="Bold" FontSize="14" 
                                       HorizontalAlignment="Center" Margin="0,0,10,0"/>
                            <Border Background="White" Padding="8" CornerRadius="2" Margin="0,0,5,0">
                                <TextBlock x:Name="InjectionTestResults" TextWrapping="Wrap" FontSize="11"
                                           Text="No tests run yet"
                                           AutomationProperties.Name="Injection Test Results"
                                           AutomationProperties.HelpText="Results of application compatibility tests"/>
                            </Border>
                        </StackPanel>
                     </Border>
                </Grid>
            </Border>

            <!-- Visual Listening Indicator (Google Assistant Style) -->
            <Border Grid.Row="1" Background="Transparent" Padding="0,10,0,5" 
                    Visibility="Collapsed" x:Name="MainWindowListeningIndicatorContainer">
                <local:ListeningIndicator x:Name="MainWindowListeningIndicator" 
                                         Width="80" Height="80"
                                         HorizontalAlignment="Center"/>
            </Border>

            <!-- Primary Action: Start Dictation Button -->
            <Border Grid.Row="2" Background="#FFF8F9FA" Padding="20,15" Margin="10,5"
                   CornerRadius="8" BorderBrush="#FF28A745" BorderThickness="2" x:Name="StartDictationBorder">
                <Button x:Name="StartDictationButton" Click="StartDictationButton_Click"
                        Height="60" FontSize="18" FontWeight="Bold"
                        Background="#FF28A745" Foreground="White"
                        BorderThickness="0" Cursor="Hand"
                        AutomationProperties.Name="Start Dictation"
                        AutomationProperties.HelpText="Click to begin voice dictation. Use Ctrl Alt V shortcut to toggle.">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸŽ¤" FontSize="24" Margin="0,0,10,0"/>
                        <TextBlock Text="Start Dictation" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              Margin="{TemplateBinding Padding}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF218838"/>
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#FF1E7E34"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Border>

            <!-- Status History Panel -->
            <Border Grid.Row="3" Background="White" Padding="15" Margin="10,5"
                   CornerRadius="5" BorderBrush="#FFE1E4E8" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- History Header -->
                    <Border Grid.Row="0" BorderBrush="#FFE1E4E8" BorderThickness="0,0,0,1" Padding="0,0,0,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Recent Status Changes" FontWeight="SemiBold" FontSize="11"/>
                             <Button Grid.Column="1" x:Name="ClearHistoryButton" Content="Clear" Background="Transparent"
                                    BorderThickness="0" FontSize="10" Foreground="#FF6C757D" Padding="5,0"
                                    Click="ClearHistoryButton_Click"
                                    AutomationProperties.Name="Clear History"
                                    AutomationProperties.HelpText="Clear all status history items"/>
                             <TextBlock Grid.Column="2" x:Name="HistoryCount" Text="0 items"
                                       FontSize="10" Foreground="Gray" Margin="10,0,0,0" VerticalAlignment="Center"
                                       AutomationProperties.Name="History Count"/>
                        </Grid>
                    </Border>
                    
                    <!-- History List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                                  Margin="0,8,0,0">
                        <ItemsControl x:Name="HistoryList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FFF8F9FA" Padding="10,8" Margin="0,0,0,5" CornerRadius="3">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                             <!-- Status Indicator -->
                                             <Ellipse Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Width="8" Height="8"
                                                      Fill="{Binding StatusColor}" VerticalAlignment="Top" Margin="0,0,10,0"
                                                      AutomationProperties.Name="Status Color Indicator"
                                                      AutomationProperties.HelpText="{Binding StatusText, StringFormat='Status: {0}'}"/>
                                            
                                            <!-- Status Text -->
                                            <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding StatusText}" 
                                                      FontWeight="SemiBold" FontSize="11"/>
                                            
                                            <!-- Time and Duration -->
                                            <TextBlock Grid.Column="2" Grid.Row="0" Text="{Binding TimeString}" 
                                                      FontSize="10" Foreground="Gray"/>
                                            
                                            <!-- Message (if any) -->
                                            <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding Message}" 
                                                      FontSize="10" Foreground="#FF6C757D" TextWrapping="Wrap"
                                                      Visibility="{Binding HasMessage, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Quick Stats Section -->
        <Border Grid.Row="3" Background="#FFF0F0F0" Padding="15,10" BorderBrush="#FFCCCCCC" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="Today's Recordings" FontSize="10" Foreground="Gray" HorizontalAlignment="Center"
                               AutomationProperties.Name="Today's Recordings Label"/>
                    <TextBlock x:Name="TodayRecordings" Text="0" FontSize="16" FontWeight="Bold"
                              HorizontalAlignment="Center" Foreground="#FF007ACC"
                              AutomationProperties.Name="Today's Recordings Count"
                              AutomationProperties.HelpText="Number of voice recordings made today"
                              AutomationProperties.LiveSetting="Polite"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="Usage Time" FontSize="10" Foreground="Gray" HorizontalAlignment="Center"
                               AutomationProperties.Name="Usage Time Label"/>
                    <TextBlock x:Name="UsageTime" Text="0m" FontSize="16" FontWeight="Bold"
                              HorizontalAlignment="Center" Foreground="#FF28A745"
                              AutomationProperties.Name="Usage Time Value"
                              AutomationProperties.HelpText="Total minutes of audio processed today"
                              AutomationProperties.LiveSetting="Polite"/>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="API Usage" FontSize="10" Foreground="Gray" HorizontalAlignment="Center"
                               AutomationProperties.Name="API Usage Label"/>
                    <TextBlock x:Name="ApiUsage" Text="$0.00" FontSize="16" FontWeight="Bold"
                              HorizontalAlignment="Center" Foreground="#FF6F42C1"
                              AutomationProperties.Name="API Usage Cost"
                              AutomationProperties.HelpText="Estimated cost of cloud API usage today"
                              AutomationProperties.LiveSetting="Polite"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Footer Status -->
        <Border Grid.Row="4" Background="#FF2D2D30" Padding="15,8">
            <StackPanel>
                <TextBlock x:Name="FooterStatus" Text="Ready" HorizontalAlignment="Center"
                          FontWeight="SemiBold" Foreground="White"
                          AutomationProperties.Name="Footer Status"
                          AutomationProperties.HelpText="Current application state"/>
                <TextBlock x:Name="FooterMessage" Text="System initialized" HorizontalAlignment="Center"
                          FontSize="10" Foreground="#FFADB5BD"
                          AutomationProperties.Name="Footer Message"
                          AutomationProperties.HelpText="Additional status information"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>