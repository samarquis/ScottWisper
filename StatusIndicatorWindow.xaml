<Window x:Class="WhisperKey.StatusIndicatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Status Indicator"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        Width="200"
        Height="80"
        ResizeMode="NoResize"
        MouseDown="Window_MouseDown"
        Loaded="Window_Loaded">
    
    <Border Name="MainBorder" Background="#80000000" CornerRadius="12" Margin="0">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
        </Border.Effect>
        
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Status Indicator Circle -->
            <Ellipse Name="StatusCircle" Grid.Column="0" Width="40" Height="40" 
                     Fill="#808080" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            
            <!-- Status Text and Details -->
            <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                <TextBlock Name="StatusText" 
                           Foreground="White" 
                           FontWeight="SemiBold"
                           FontSize="14"
                           FontFamily="Segoe UI"
                           Text="Ready"/>
                
                <TextBlock Name="StatusDescription" 
                           Foreground="#CCCCCC" 
                           FontSize="10"
                           FontFamily="Segoe UI"
                           Text="Ready for dictation"
                           Margin="0,2,0,0"/>
            </StackPanel>
        </Grid>
        
        <!-- Tooltip content -->
        <Border.ToolTip>
            <ToolTip Background="#333333" Foreground="White" BorderThickness="0">
                <StackPanel>
                    <TextBlock Name="TooltipTitle" FontWeight="Bold" Text="WhisperKey Status"/>
                    <TextBlock Name="TooltipDetails" Text="Current status and actions"/>
                </StackPanel>
            </ToolTip>
        </Border.ToolTip>
    </Border>
</Window>